    <select id="findAllUserByRole" resultType="userEntity">
        select * from user where role = '用户'
    </select>

    <select id="checkLogin" resultType="userEntity">
        select * from user where username = #{username} and password =#{password}
    </select>

    <select id="finduserById" resultType="userEntity">
        select * from user WHERE userid = #{userid}
    </select>

    <select id="finduserByusername" resultType="java.lang.String">
        select username from user WHERE username = #{username}
    </select>

    <select id="addnewUser">
        insert into user(userid,username,password,role,nickname,sex,phone,headprc,state) values(0,#{username},#{password},"用户","","","","","正常")
    </select>

    <select id="updateUserprc">
        UPDATE user SET headprc = #{headprc} WHERE userid = #{userid}
    </select>

    <select id="updateUserinfo">
        UPDATE user SET nickname=#{nickname} , phone=#{phone}, sex=#{sex}  WHERE userid = #{userid}
    </select>

    <update id="updateUserState">
         UPDATE user SET state = #{state}  WHERE userid = #{userid}
    </update>

    <delete id="delUser">
        delete from user where userid = #{userid}
    </delete>

</mapper>