<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lzp.mapper.ActivityenlistMapper">


    <select id="findallessay" resultType="ActivityenlistEntity">
        select * from activityenlist WHERE activityid = #{activityid}
    </select>

    <select id="finduserjoin" resultType="int">
        select activityid from activityenlist WHERE userid = #{userid}
    </select>

    <select id="findenlist" resultType="ActivityenlistEntity">
        select * from activityenlist WHERE activityid = #{activityid} and userid = #{userid}
    </select>

    <select id="submitenlist">
        insert into activityenlist(enlistid,activityid,userid,essay,phone,name) values(0,#{activityid},#{userid},"",#{phone},#{name})
    </select>

    <select id="updateessay">
        UPDATE activityenlist SET essay = #{essay} WHERE activityid = #{activityid} and userid = #{userid}
    </select>

</mapper>